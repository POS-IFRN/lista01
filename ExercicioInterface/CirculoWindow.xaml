<Window x:Class="ExercicioInterface.CirculoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExercicioInterface"
        mc:Ignorable="d"
        Title="CirculoWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Digite o raio do círculo:" HorizontalAlignment="Left" Margin="19,23,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxraio" HorizontalAlignment="Left" Height="23" Margin="158,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="3"/>
        <Button x:Name="button" Content="Criar círculo" HorizontalAlignment="Left" Margin="158,54,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBoxResult" HorizontalAlignment="Left" Height="23" Margin="19,207,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="259"/>
        <Button x:Name="button1" Content="Área do círculo" HorizontalAlignment="Left" Margin="19,148,0,0" VerticalAlignment="Top" Width="259" Click="button1_Click"/>
        <Button x:Name="button1_Copy2" Content="Circunferência do círculo" HorizontalAlignment="Left" Margin="19,175,0,0" VerticalAlignment="Top" Width="259" Click="button1_Copy2_Click"/>

    </Grid>
</Window>
