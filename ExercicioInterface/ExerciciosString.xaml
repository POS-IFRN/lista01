<Window x:Class="ExercicioInterface.ExerciciosString"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExercicioInterface"
        mc:Ignorable="d"
        Title="ExerciciosString" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="13,50,0,0" TextWrapping="Wrap" Text="Digite sua frase" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="158,60,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Contar" HorizontalAlignment="Left" Margin="13,78,0,0" VerticalAlignment="Top" Width="120" Click="button_Click"/>
        <Button x:Name="button1" Content="Inverter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="13,103,0,0" Click="button1_Click"/>
        <Button x:Name="button2" Content="Gerar senha" HorizontalAlignment="Left" Margin="13,128,0,0" VerticalAlignment="Top" Width="120" Click="button2_Click"/>
        <Button x:Name="button3" Content="Pegar iniciais da frase" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="13,153,0,0" Click="button3_Click"/>


    </Grid>
</Window>
